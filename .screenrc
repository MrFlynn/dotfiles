# Disable startup message
startup_message off

# Turn off bell for auto-completion
vbell off

# Scrollback lines
defscrollback 1500

# xterm color settings
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# Allow mouse to select windows
# mousetrack on

# Terminal status line
hardstatus alwayslastline
hardstatus string '%{= kG}[%t][ %{G}%H %{g}][%{B} %d/%m %{W}%c %{g}]'
